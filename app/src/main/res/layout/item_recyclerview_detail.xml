<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image_poster"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_below="@id/image_poster"
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
    <TextView
        android:layout_below="@id/text_title"
        android:id="@+id/text_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
    <TextView
        android:layout_below="@id/text_genre"
        android:id="@+id/text_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
    <TextView
        android:layout_below="@id/text_release_date"
        android:id="@+id/text_vote_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
    <RatingBar
        android:layout_below="@id/text_release_date"
        android:layout_toRightOf="@id/text_release_date"
        android:id="@+id/rating_vote_average"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="@dimen/rating_vote_average"
        android:layout_height="wrap_content"/>
</RelativeLayout>