<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_item_recyclerview_cast"
    android:layout_marginTop="@dimen/margin_top_item_cast"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="@dimen/unuse_width"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/text_character"
        android:layout_width="@dimen/unuse_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_weight="2"
        android:paddingRight="@dimen/padding_text"
        android:textColor="@color/color_indigo_500"
        />
    <TextView
        android:id="@+id/text_name"
        android:layout_width="@dimen/unuse_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        />
</LinearLayout>